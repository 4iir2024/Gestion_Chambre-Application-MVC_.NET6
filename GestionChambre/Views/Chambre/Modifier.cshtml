@model GestionChambre.Models.Chambre

@{
    ViewData["Title"] = "Chambre - Modifier";
}

<h1>Chambre - Modifier</h1>

<form method="post" asp-action="Modifier">
    <fieldset>
        <legend>Modification Chambre</legend>
        <div class="form-group row">
            <label for="Numero" class="col-sm-2 col-form-label">Numero</label>
            <div class="col-sm-10">
                <input asp-for="Numero" readonly class="form-control">
            </div>
        </div>

        <div class="form-group row">
            <label for="Type" class="col-sm-2 col-form-label">Type</label>
            <div class="col-sm-10">
                <input asp-for="Type" class="form-control">
            </div>
        </div>

        <div class="form-group row">
            <label for="Numero_etage" class="col-sm-2 col-form-label">Numero Etage</label>
            <div class="col-sm-10">
                <input asp-for="Numero_etage" class="form-control">
            </div>
        </div>

        <div class="form-group row">
            <label for="Date_Debut" class="col-sm-2 col-form-label">Date Debut</label>
            <div class="col-sm-10">
                <input asp-for="Date_Debut" class="form-control">
            </div>
        </div>

        <div class="form-group row">
            <label for="Date_Fin" class="col-sm-2 col-form-label">Date Fin</label>
            <div class="col-sm-10">
                <input asp-for="Date_Fin" class="form-control">
            </div>
        </div>


        <button type="submit" class="btn btn-primary">Modifier</button>
    </fieldset>
</form>