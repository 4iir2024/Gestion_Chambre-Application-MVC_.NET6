@model GestionChambre.Models.Chambre

@{
    ViewData["Title"] = "Chambre - Ajouter";
}


<h1>Chambre - Ajouter</h1>


<form method="post" asp-action="Ajouter">
    <fieldset>
        <legend>Chambre Informations</legend>
        <div class="form-group row">
            <label for="Isbn" class="col-sm-2 col-form-label">Numero</label>
            <div class="col-sm-10">
                <input asp-for="Numero" readonly class="form-control">
            </div>
        </div>

        <div class="form-group row">
            <label for="Titre" class="col-sm-2 col-form-label">Type</label>
            <div class="col-sm-10">
                <input asp-for="Type" class="form-control">
            </div>
        </div>

        <div class="form-group row">
            <label for="Auteur" class="col-sm-2 col-form-label">Numero Etage</label>
            <div class="col-sm-10">
                <input asp-for="Numero_etage" class="form-control">
            </div>
        </div>

        <div class="form-group row">
            <label for="DateEdition" class="col-sm-2 col-form-label">Date Debut</label>
            <div class="col-sm-10">
                <input asp-for="Date_Debut" class="form-control">
            </div>
        </div>

        <div class="form-group row">
            <label for="Resume" class="col-sm-2 col-form-label">Date Fin</label>
            <div class="col-sm-10">
                <input asp-for="Date_Fin" class="form-control">
            </div>
        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
    </fieldset>
</form>